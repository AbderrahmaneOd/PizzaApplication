<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="25dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/idPizzaNomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="9dp"
            />

        <TextView
            android:id="@+id/idPizzaNbrIngrediantsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nbrIngredients"
            android:layout_below="@+id/idPizzaNomItem"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/idPizzaDurreeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="durree"
            android:layout_below="@+id/idPizzaNbrIngrediantsItem"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/idPizzaIconItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/idPizzaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/idPizzaIconItem"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>